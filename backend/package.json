{
  "name": "fomo-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:node": "tsx watch src/server.ts",
    "dev:python": "cd /app/backend && python server.py",
    "dev:parser": "cd /app/twitter-parser-v2 && yarn dev",
    "dev:all": "concurrently -k -n PYTHON,NODE,PARSER -c blue,green,yellow \"yarn dev:python\" \"yarn dev:node\" \"yarn dev:parser\"",
    "start": "node dist/server.js",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/websocket": "^10.0.1",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "ethers": "^6.0.0",
    "fastify": "^4.28.1",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.8.0",
    "uuid": "^13.0.0",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/uuid": "^11.0.0",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/ui": "^4.0.18",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
